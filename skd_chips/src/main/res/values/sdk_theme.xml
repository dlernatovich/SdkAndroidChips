<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SDK.Chips" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sdk_chip_main</item>
        <item name="colorPrimaryVariant">@color/sdk_chips_background</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sdk_chip_main</item>
        <item name="colorSecondaryVariant">@color/sdk_chip_teal_700</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ThemeOverlay.SDK.Chips.App.BottomAppBar" parent="">
        <item name="colorPrimary">#fefefe</item>
        <item name="colorControlNormal">@color/sdk_chip_main</item>
        <item name="rippleColor">@color/sdk_chip_main</item>
    </style>

    <style name="Widget.SDK.Chips.App.BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.SDK.Chips.App.BottomAppBar</item>
        <item name="backgroundTint">#E6FEFEFE</item>
        <item name="fabCradleMargin">@dimen/dimen_8</item>
    </style>

    <style name="ThemeOverlay.SDK.Chips.App.BottomAppBar.Button.Blue" parent="">
        <item name="tint">@color/sdk_chips_background</item>
        <item name="backgroundTint">@color/sdk_chip_main</item>
        <item name="rippleColor">@color/sdk_chips_background</item>
    </style>

</resources>